extends ../layout.pug

block content
	include ../../components/header/header.pug
	include ../../components/footer/footer.pug
	include ../../components/section/section.pug
	include ../../components/picture/picture.pug
	include ../../components/model/model.pug
	include ../../components/modal/modal.pug
	include ../../components/preloader/preloader.pug
	+header({
		'className': 'alwaysFixed'
	})
	+section({
		'className': 'bottle-section'
	})
		.bottle-bg
			.container
		.colored-block
			.container
				h1.title A satisfying, three-part meal.
				a.button#videoModal__open.modal__open(href="javascript:void(0)")
					span.triangle
					| Watch Video
		.bottle
			.container
				+picture({
					'href': './assets/images/content/main/bottle',
					'type': 'png',
					'alt': 'bottle'
					})
				.bottle-text.text._first Lorem ipsum dolor amet hella bicycle rights banh mi, raw denim glossier farm-to-table 3 wolf moon 8-bit aesthetic.
				.bottle-text.text._second Lorem ipsum dolor amet hella bicycle rights banh mi, raw denim glossier farm-to-table 3 wolf moon 8-bit aesthetic.
				.bottle-text.text._third Lorem ipsum dolor amet hella bicycle rights banh mi, raw denim glossier farm-to-table 3 wolf moon 8-bit aesthetic.
	+section({
		'className': 'colored-section difference-section'
	})
		.container
			.difference__content
				h2.subtitle The Mealia Difference
				p.text Lorem ipsum dolor amet hella bicycle rights banh mi, raw denim glossier farm-to-table 3 wolf moon 8-bit aesthetic humblebrag butcher fanny pack typewriter iceland readymade. Chia single-origin coffee tofu, fixie celiac typewriter.
			.difference__video
				.difference__video--bg
					+picture({
						'href': './assets/images/content/main/difference',
						'type': 'jpg',
						'alt': 'Video bg'
					})
				a#videoModal__open1.modal__open(href="javascript:void(0)")
					span.triangle
						img(src="./assets/images/template/main/play.svg", alt="Play button")
	+section({
		'className': 'models-section'
	})
		.container
			.models-block
				+model({
					'title': 'Superberry',
					'image': {
						'href': './assets/images/content/main/model7',
						'type': 'png',
						'alt': 'Superberry'
					},
					'background': '#b33150',
					'text': 'Lorem ipsum dolor amet hella bicycle rights banh mi, raw denim glossier farm-to-table 3 wolf moon 8-bit aesthetic.'
				})
				+model({
					'title': 'Tropical Coconut Milk',
					'image': {
						'href': './assets/images/content/main/model1',
						'type': 'png',
						'alt': 'Model 1'
					},
					'background': '#ffd741',
					'text': 'Lorem ipsum dolor amet hella bicycle rights banh mi, raw denim glossier farm-to-table 3 wolf moon 8-bit aesthetic.'
				})
	+section({
		'className': 'colored-section reviews-section'
	})
		.container
			h2.subtitle Our Customers Love Us
			.reviews-list
				ul
					li.review-list__item
						p.small-text Lorem ipsum dolor amet hella bicycle rights banh mi, raw denim glossier farm-to-table 3 wolf moon 8-bit aesthetic humblebrag.
							span - Bobby Roberts
					li.review-list__item
						p.small-text Lorem ipsum dolor amet hella bicycle rights banh mi, raw denim glossier farm-to-table 3 wolf moon 8-bit aesthetic humblebrag.
							span - Bobby Roberts
					li.review-list__item
						p.small-text Lorem ipsum dolor amet hella bicycle rights banh mi, raw denim glossier farm-to-table 3 wolf moon 8-bit aesthetic humblebrag.
							span - Bobby Roberts
	+footer([
		{
			'text': 'Privacy Policy',
			'href': 'javascript:void(0)'
		},
		{
			'text': 'Terms of Use',
			'href': 'javascript:void(0)'
		}
	])
	+modal({
		'id': 'videoModal'
	})
		iframe(src="https://www.youtube.com/embed/rlR4PJn8b8I" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)